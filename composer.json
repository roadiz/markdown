{
    "name": "roadiz/markdown",
    "description": "Markdown services and Twig extension for Roadiz",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "league/commonmark": "^1.5",
        "pimple/pimple": "^3.2",
        "twig/twig": "^2.0 || ^3.0",
        "doctrine/collections": "^1.6",
        "symfony/stopwatch": "^4.4.1 || ^5.0"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "squizlabs/php_codesniffer": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpstan/phpstan": "^0.11.19"
    },
    "suggest": {
        "erusev/parsedown": "If you want to use erusev Markdown parser instead of ThePhpLeague Commonmark",
        "erusev/parsedown-extra": "If you want to use erusev Markdown parser instead of ThePhpLeague Commonmark"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "RZ\\Roadiz\\Markdown\\": "src/"
        }
    }
}
